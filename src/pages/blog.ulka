<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog | {% siteMetaData.title %}</title>
    {% $importUlka('/src/components/metaTags.ulka') %}
   {% $importUlka('/src/components/styles.ulka') %}
  </head>
  <body class="dark">
    <div class="container">
      <main>
        {% $importUlka('/src/components/nav.ulka') %}
        
        <div id="blogs">
        {% globalInfo.contentFiles.slice().sort((a, b) => new Date(b.frontMatter.date) - new Date(a.frontMatter.date)).map(cf => {
            return `
        <div class="blog-item">
            <a href="${cf.link}">
              <div class="blog-title">${cf.frontMatter.title}</div>
            </a>
            <div class="blog-desc">
              ${cf.frontMatter.description}
            </div>
            <div class="blog-date">${new Date(cf.frontMatter.date).toDateString() }</div>
        </div>
            `
        }).join("\n") %}
          
        </div>
      </main>
      <footer>
        &copy; 2020, Ulka Js
      </footer>
    </div>

       {% $importUlka('/src/components/darkMode.ulka') %}

  </body>
</html>
